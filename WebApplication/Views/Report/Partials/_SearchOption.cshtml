            {
                @Html.Label("Stock", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("StockID", ViewBag.Stocks as IEnumerable<SelectListItem>, new { @class = "form-control select2bs4 txtSearch", @multiple = "multiple", @style = "width:100%" })
