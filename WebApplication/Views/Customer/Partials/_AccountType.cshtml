@model WebApplication.Models.CustomerAccount
@using (Html.BeginForm("StoreAccount", "Customer", FormMethod.Post, new { id = "frmCreate", enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="modal-form">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="modal-title" class="modal-title">
                        @Resources.Buttons.Create
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.memberID, new { @class = "form-control", @Value= ViewBag.CustId })
                                @Html.Label(@Resources.Customer.AccountType, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.AccountType, ViewBag.AccountTypes as SelectList,"Please select", new { @class = "form-control", @style = "width:100%", @required = true })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label(@Resources.Customer.DateExpire, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.DateExpire, new { @class = "form-control singledatepicker" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label(@Resources.Customer.LimitePay1Time, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LimitePay1Time, new { @class = "form-control", @type="number", @min="0", @placeholder = "0" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label(@Resources.Customer.Description, htmlAttributes: new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = @Resources.Customer.Description })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-min mr-2" data-dismiss="modal">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                        @Resources.Buttons.Cancel
                    </button>
                    <button type="submit" id="btnSaveOrUpdate" class="btn btn-success btn-min">
                        <i class="far fa-check-circle"></i>
                        @Resources.Buttons.Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}
