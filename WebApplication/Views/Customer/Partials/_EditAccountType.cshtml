@model WebApplication.Models.CustomerAccount

@using (Html.BeginForm("UpdateAccount", "Customer", FormMethod.Post, new { id = "frmEdit", enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="modal-edit">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="modal-title" class="modal-title">
                        Edit
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.CustomerAccountID, new { @id = "setCustomerAccountID", @class ="form-control" } )
                                @Html.Label(@Resources.Customer.DateExpire, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.DateExpire, new { @id="setDateExpire", @class = "form-control singledatepicker" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label(@Resources.Customer.LimitePay1Time, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LimitePay1Time, new { @id= "setLimitePay1Time", @class = "form-control", @type = "number", @min = "0", @placeholder = "0" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label(@Resources.Customer.Description, htmlAttributes: new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.Description, new { @id= "setDescription", @class = "form-control", @placeholder = @Resources.Customer.Description })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group pt-2">
                                <div class="icheck-primary d-inline">
                                    @Html.CheckBox("IsActive", new { @id = "IsActive", @checked = true })
                                    <label for="IsActive">
                                        @Resources.Customer.Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-min mr-2" data-dismiss="modal">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                        @Resources.Buttons.Cancel
                    </button>
                    <button type="submit" id="btnSaveOrUpdate" class="btn btn-success btn-min">
                        <i class="far fa-check-circle"></i>
                        @Resources.Buttons.Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

