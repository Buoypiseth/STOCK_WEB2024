@model IEnumerable<WebApplication.Models.UserRole>
@section Styles {
    <link href="~/assets/plugins/select2/css/select2.min.css" rel="stylesheet">
    <link href="~/assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet">
    <link href="~/assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/assets/plugins/datatables-responsive/css/responsive.bootstrap4.css" rel="stylesheet">
    <link href="~/assets/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/daterangepicker/daterangepicker.css" rel="stylesheet">
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title text-secondary">
            <i class="fas fa-edit"></i>
            @Resources.Globle.Create
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col">
                @using (Html.BeginForm("Create", "Role", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label(Resources.UserRole.Username, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("UserId", ViewBag.Users as SelectList, new { @class = "form-control select2bs4", @style = "width:100%" })
                    </div>
                    <div class="form-group">
                        @Html.Label(Resources.UserRole.UserLevel, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("UserLevel", ViewBag.UserLevels as SelectList, new { @class = "form-control select2bs4", @style = "width:100%" })
                    </div>
                    <div class="form-group">
                        @Html.Label(Resources.UserRole.StockID, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("StockID", ViewBag.Stocks as SelectList, new { @class = "form-control select2bs4", @style = "width:100%" })
                    </div>
                    <div class="form-group">
                        @Html.Label(Resources.UserRole.Role, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("RoleId", ViewBag.Roles as SelectList, new { @class = "form-control select2bs4", @multiple = "multiple", @data_placeholder = "-- select roles--", @required = "required", @style = "width:100%" })
                    </div>
                    <div class="float-right pt-1">
                        <button type="submit" class="btn btn-success btn-min">
                            <i class="far fa-check-circle"></i>
                            @Resources.Globle.Save
                        </button>
                    </div>
                }
            </div> 
        </div>
    </div>
    <!-- /.card-body -->
</div>
@section Scripts {
    <script src="~/assets/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/assets/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/assets/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/assets/plugins/datatables-responsive/js/dataTables.responsive.js"></script>
    <script src="~/assets/plugins/datatables-responsive/js/responsive.bootstrap4.js"></script>
    <script src="~/assets/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/plugins/sweetalert2/sweetalert2@9-sweetaler2.min.js"></script>
    <script src="~/assets/plugins/toastr/toastr.min.js"></script>
    <script src="~/assets/plugins/moment/moment.min.js"></script>
    <script src="~/assets/plugins/daterangepicker/daterangepicker.js"></script>

    <script type="text/javascript">
        $(function () {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });

            $('.select2').select2();
            $('.select2bs4').select2({
                theme: 'bootstrap4',
            });
            $('.singledatepicker').daterangepicker({
                opens: 'right',
                drops: 'down',
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 2000,
                maxYear: parseInt(moment().format('YYYY'), 10),
                locale: {
                    format: 'YYYY-MM-DD',
                    firstDay: 1,
                }
            });

            $('.singledatetimepicker').daterangepicker({
                opens: 'right',
                drops: 'down',
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 2000,
                maxYear: parseInt(moment().format('YYYY'), 10),
                timePicker: true,
                timePicker24Hour: true,
                locale: {
                    format: 'YYYY-MM-DD hh:mm',
                    firstDay: 1
                }
            })
        });
    </script>
}

