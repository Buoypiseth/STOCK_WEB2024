@model WebApplication.Models.User
@using (Html.BeginForm("Update", "User", FormMethod.Post))
{
    <div class="modal fade" id="modal-edit">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="modal-title" class="modal-title text-secondary">
                        <i class="fa fa-edit"></i>
                        @Resources.Globle.Edit
                    </h5>
                    <div class="float-right">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Hidden("txtId", "", new { @class = "form-control", @placeholder = "id" })
                            @Html.Label(Resources.User.Username, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBox("txtName", "", new { @class = "form-control", @required = "required", @placeholder = Resources.User.Username })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label(Resources.User.Password, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBox("txtPassword", "", new { @class = "form-control", @type="password", @placeholder = "********" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-danger btn-min" data-dismiss="modal">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                        @Resources.Globle.Cancel
                    </button>
                    <button type="submit" id="btnSaveOrUpdate" class="btn btn-success btn-min">
                        <i class="far fa-check-circle"></i>
                        @Resources.Globle.Update
                    </button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
}
