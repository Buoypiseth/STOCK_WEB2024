@model WebApplication.Models.tbl_BuyProducts_Pending
<div class="modal fade" id="modalAttribute">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 id="modal-title" class="modal-title text-secondary">
                    @*<i class="fa fa-code-branch"></i>*@
                    @Resources.Buttons.Attribute
                </h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body px-5 py-4">
                <div class="form-group row">
                    <label for="barCode" id="labelBarCode" class="col-md-4 col-lg-4 col-form-label">@Resources.BuyProduct.Ime</label>
                    <div class="col-md-8 col-lg-8 mb-1">
                        <input type="hidden" class="form-control" id="statusFocus" />
                        @Html.HiddenFor(model => model.MainStockID, new { @class = "form-control" })
                        <div class="input-group">
                            @Html.EditorFor(model => model.barCode, new { htmlAttributes = new { @class = "form-control is-warning", @placeholder = @Resources.BuyProduct.Ime } })
                            <div class="input-group-append">
                                <button id="btnCreateIme" class="input-group-text text-primary"><i class="fa fa-plus-circle mr-2"></i>Add</button>
                            </div>
                        </div>
                        <small id="validationBarcode"></small>
                        @*@Html.ValidationMessageFor(model => model.barCode, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <label for="PrdNameEng" class="col-md-4 col-lg-4 col-form-label">@Resources.BuyProduct.PrdNameEng</label>
                    <div class="col-md-8 col-lg-8 mb-1">
                        @Html.EditorFor(model => model.PrdNameEng, new { htmlAttributes = new { @class = "form-control is-warning", @placeholder = @Resources.BuyProduct.PrdNameEng, @readonly=true} })
                        @Html.ValidationMessageFor(model => model.PrdNameEng, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Quantity" class="col-md-4 col-lg-4 col-form-label">@Resources.BuyProduct.Quantity</label>
                    <div class="col-md-8 col-lg-8 mb-1">
                        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control is-warning", @step = "0.01", @type = "Number", @placeholder = "0" } })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ExpireDate" class="col-md-4 col-lg-4 col-form-label">@Resources.BuyProduct.ExpireDate</label>
                    <div class="col-md-8 col-lg-8 mb-1">
                        @Html.EditorFor(model => model.ExpireDate, new { htmlAttributes = new { @class = "form-control is-warning singledatepicker" } })
                        @Html.ValidationMessageFor(model => model.ExpireDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="BuyingCost" class="col-md-4 col-lg-4 col-form-label">@Resources.BuyProduct.BuyingCost</label>
                    <div class="col-md-8 col-lg-8 mb-1">
                        @Html.EditorFor(model => model.BuyingCost, new { htmlAttributes = new { @class = "form-control is-warning", @step = "0.01", @type = "Number", @placeholder = "0" } })
                        @Html.ValidationMessageFor(model => model.BuyingCost, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="SellingPriceUSD" class="col-md-4 col-lg-4 col-form-label">@Resources.BuyProduct.SellingPriceUSD</label>
                    <div class="col-md-8 col-lg-8 mb-1">
                        @Html.EditorFor(model => model.SellingPriceUSD, new { htmlAttributes = new { @class = "form-control is-warning", @step = "0.01", @type = "Number", @placeholder = "0" } })
                        @Html.ValidationMessageFor(model => model.SellingPriceUSD, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <label for="" class="col-md-4 col-lg-4 col-form-label"></label>
                    <div class="col-md-4 col-lg-4">
                        <button type="button" class="btn btn-outline-danger btn-min" data-dismiss="modal">
                            <i class="fa fa-times-circle" aria-hidden="true"></i>
                            @Resources.Buttons.Cancel
                        </button>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <button type="button" id="btnUpdate" class="btn btn-outline-success btn-min float-right">
                            <i class="far fa-check-circle"></i>
                            @Resources.Buttons.Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
