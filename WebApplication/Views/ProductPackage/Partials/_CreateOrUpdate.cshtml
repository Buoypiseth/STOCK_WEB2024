@model WebApplication.Models.tbl_products_Package
<div class="modal fade" id="modal-form">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 id="modal-title" class="modal-title text-secondary">
                    @*<i class="fa fa-plus-circle"></i>*@
                    @Resources.Buttons.Create
                </h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "ProductPackage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.Product_PackageID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.Label(@Resources.ProductPackage.PrdNameEng, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Product_Package, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = @Resources.ProductPackage.PrdNameEng } })
                                @Html.ValidationMessageFor(model => model.Product_Package, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                @Html.Label(@Resources.ProductPackage.Description, htmlAttributes: new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 3, @placeholder = @Resources.ProductPackage.Description })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col text-right">
                            <button type="button" class="btn btn-danger btn-min mr-2" data-dismiss="modal">
                                <i class="fa fa-times-circle" aria-hidden="true"></i>
                                @Resources.Buttons.Cancel
                            </button>
                            <button type="submit" id="btnSaveOrUpdate" class="btn btn-success btn-min">
                                <i class="far fa-check-circle"></i>
                                @Resources.Buttons.Save
                            </button>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
