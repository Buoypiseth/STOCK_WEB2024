@model WebApplication.Models.tbl_products_Package_Detail
@using (Html.BeginForm("AddItem", "ProductPackage", FormMethod.Post))
{
    <div class="modal fade" id="modal-form">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 id="modal-title" class="modal-title text-secondary">
                        @*<i class="fa fa-code-branch"></i>*@
                        @Resources.Buttons.AddItem
                    </h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body px-5 py-4">
                    <div class="form-group row border-bottom pb-1">
                        <label for="Product_Package" class="col-md-4 col-lg-4 col-form-label">@Resources.ProductPackage.Product_Package</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.HiddenFor(model => model.Product_PackageDetail_ID, new { @class = "form-control", @Value = ViewBag.Product_PackageDetail_ID })
                            @Html.HiddenFor(model => model.Product_PackageID, new { @class = "form-control", @Value = ViewBag.PackageID })
                            @Html.TextBox("Product_Package", "", new { @class = "form-control", @Value = ViewBag.PackageName, @readonly = true, @placeholder = @Resources.ProductPackage.Product_Package })
                        </div>
                    </div>
                    @*<div class="form-group row pt-1">
                        <label for="barCode" id="labelBarCode" class="col-md-4 col-lg-4 col-form-label">ស្កេនបារកូដ</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.TextBox("barCode", "", new { @class = "form-control is-warning", @placeholder = "ស្កេនបារកូដ" })
                            <small id="validationBarcode"></small>
                        </div>
                    </div>*@
                    <div class="form-group row pt-1">
                        <label for="PrdCategID" class="col-md-4 col-lg-4 col-form-label">@Resources.ProductPackage.PrdCategory</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.DropDownList("PrdCategID", ViewBag.Categories as IEnumerable<SelectListItem>, new { @class = "form-control select2bs4", @style = "width:100%" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="PrdNameEng" class="col-md-4 col-lg-4 col-form-label">@Resources.ProductPackage.Product</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.DropDownListFor(model => model.ProductID, ViewBag.Products as IEnumerable<SelectListItem>, new { @class = "form-control select2bs4", @style = "width:100%" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Quantity" class="col-md-4 col-lg-4 col-form-label">@Resources.ProductPackage.Quantity</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control is-warning", @step = "0.01", @type = "Number", @placeholder = "0" } })
                            @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="SellingPriceUSD" class="col-md-4 col-lg-4 col-form-label">@Resources.ProductPackage.SellingPriceUSD</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.EditorFor(model => model.SellingPriceUSD, new { htmlAttributes = new { @class = "form-control is-warning", @step = "0.01", @type = "Number", @placeholder = "0" } })
                            @Html.ValidationMessageFor(model => model.SellingPriceUSD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Descripiton" class="col-md-4 col-lg-4 col-form-label">@Resources.ProductPackage.Description</label>
                        <div class="col-md-8 col-lg-8 mb-1">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 2, @placeholder = @Resources.ProductPackage.Description })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row pt-2">
                        <label for="" class="col-md-4 col-lg-4 col-form-label"></label>
                        <div class="col-md-4 col-lg-4">
                            <button type="button" class="btn btn-outline-danger btn-min" data-dismiss="modal">
                                <i class="fa fa-times-circle" aria-hidden="true"></i>
                                @Resources.Buttons.Cancel
                            </button>
                        </div>
                        <div class="col-md-4 col-lg-4">
                            <button type="submit" id="btnSaveOrUpdate" class="btn btn-outline-success btn-min float-right">
                                <i class="far fa-check-circle"></i>
                                @Resources.Buttons.Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
