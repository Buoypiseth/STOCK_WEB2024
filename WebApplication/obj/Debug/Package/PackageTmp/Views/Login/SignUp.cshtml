@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model WebApplication.Models.UserModel
<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>Sign Up</b></a>
        </div>
        <div class="card-body">
            <p class="login-box-msg text-danger">@ViewBag.ErrorMessage</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Your Name", @required = "True" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
               

                <div class="input-group mt-3">
                    @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @placeholder = "Your E-mail Address", @required = "True" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                
                <div class="input-group mt-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Your Password", @required = "True" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-key"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                
                <div class="input-group mt-3">
                    @Html.DropDownListFor(model => model.UserLevel, ViewBag.UserLevels as SelectList, new { @class = "form-control", @style = "width:100%" })
                    @Html.ValidationMessageFor(model => model.UserLevel, "", new { @class = "text-danger" })
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </div>
                </div>
            }
            <!-- /.go register -->
            <p class="mb-0 text-center">
                <a href="@Url.Action("SignIn", "Account")" class="text-center">Sign In</a>
            </p>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.login-box -->
