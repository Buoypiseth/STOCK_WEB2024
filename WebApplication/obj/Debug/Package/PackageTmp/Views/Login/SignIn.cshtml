@model WebApplication.Models.UserModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section Styles {
    <link href="~/assets/dist/css/login_page.css" rel="stylesheet">
}
<div id="login-box">
    <h3 class="login-title">Login</h3>
    <p></p>
    @if (TempData["flashError"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @TempData["flashError"]
        </div>
    }
    <div id="login-form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group pb-4">
                @*@Html.DropDownListFor(model => model.Email, ViewBag.Users as SelectList, "Please select", new { @class = "form-control" })*@
                @Html.TextBoxFor(m => m.Email, new { @type = "text", @class = "form-control", @placeholder = "Username", @required = "True" })
            </div>

            <div class="form-group pb-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "True" })
            </div>
            <div class="row">
                <div class="col">
                    <button type="submit" id="btnSubmit" class="btn btn-primary btn-block">Login</button>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").on("click", function (e) {
                $(this).closest("form")[0].submit();
                $(this).prop('disabled', true)
            });
        });
    </script>
}