        var prdCategory = $('#PrdCategory');
        var prdCategIDMain = $('#PrdCategIDMain');
        var categoryOrder = $('#CategoryOrder');
        var _dataTable = $('.data-table');
        $(function () {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
            $('.select2').select2();
            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4',
            });

            $(document).on('click', '#btnSave', function () {
                 var data = {};
                data.PrdCategory = prdCategory.val();
                data.PrdCategIDMain = prdCategIDMain.val();
                data.CategoryOrder = categoryOrder.val();
			    $.ajax({
                    url: '@Url.Action("Create", "Category")',
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(data),
                    dataType: "json",
                    success: function (message) {
                        if (message == 'True') {
                            //_dataTable.draw();
                            Toast.fire({
                                type: 'success',
                                title: 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr.'
                            })
                            //location.reload();
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong! //' + message
                            })
                        }
                    }
                });
            });

            $(document).on('click', '.btnEdit', function () {
                $('#modal-edit').modal('show');
            });

            $('#treeview').jstree({
                //'plugins': ["defaults", "checkbox"],
                'core': {
                    'data': {
                        //'check_callback': true,
                        'themes': {
                            'responsive': true
                        },
